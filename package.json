{
  "name": "db-source",
  "version": "1.0.0",
  "type": "module",
  "description": "Database source for microservices with load balanced read replicas",
  "scripts": {
    "start:gateway": "node apiGateway.mjs",
    "start:user": "node userService.mjs",
    "start:attendance": "node attendanceService.mjs",
    "start:leaves": "node leavesService.mjs",
    "start:pool": "node prismaService.mjs",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:user\" \"npm run start:attendance\" \"npm run start:leaves\" \"npm run start:pool\""
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@prisma/extension-read-replicas": "^0.4.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "ioredis": "^5.7.0",
    "pg": "^8.16.3",
    "prisma": "^6.16.2"
  },
  "devDependencies": {
    "autocannon": "^8.0.0",
    "concurrently": "^8.2.2"
  }
}
