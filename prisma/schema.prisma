generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("INDIA_CUSTOMER_WRITE_DB_URI")
}

model User {
  id         Int     @id @default(autoincrement())
  user_id    Int     @unique
  name       String
  email      String  @unique
  department String?
  status     String  @default("active")

  // Relationships
  attendance Attendance[]
  leaves     Leave[]

  @@map("users")
}

model Attendance {
  id        Int     @id @default(autoincrement())
  user_id   Int
  month     String
  date      String
  check_in  String?
  check_out String?
  hours     Float?
  status    String  @default("present")

  // Relationships
  user User @relation(fields: [user_id], references: [user_id])

  @@index([user_id, month])
  @@map("attendance")
}

model Leave {
  id         Int     @id @default(autoincrement())
  user_id    Int
  month      String
  type       String
  start_date String  @map("start_date")
  end_date   String  @map("end_date")
  days       Int
  reason     String?
  status     String  @default("approved")

  // Relationships
  user User @relation(fields: [user_id], references: [user_id])

  @@index([user_id, month])
  @@map("leaves")
}
